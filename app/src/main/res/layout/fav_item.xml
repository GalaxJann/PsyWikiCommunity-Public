<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    app:cardElevation="@dimen/main_card_elevation"
    app:cardMaxElevation="@dimen/main_card_elevation"
    app:cardCornerRadius="@dimen/sub_card_corner_radius"
    app:cardBackgroundColor="@color/main_card_background_color"
    app:cardPreventCornerOverlap="true">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/favName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sub_card_margin"
        android:padding="@dimen/card_text_padding"
        android:letterSpacing="0.1"
        android:text="Item Text"
        android:textSize="@dimen/main_card_title_size"
        app:fontFamily="@font/advent_pro_bold" />

</androidx.cardview.widget.CardView>